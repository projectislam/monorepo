{
  "name": "project-islam",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "build:storybook": "turbo build:storybook",
    "dev:storybook": "turbo dev:storybook",
    "db:backup": "turbo db:backup --filter=studio",
    "db:restore": "turbo db:restore --filter=studio",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "turbo": "^2.0.14"
  },
  "engines": {
    "node": ">=18.17 <19"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
